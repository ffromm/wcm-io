{
  "jcr:primaryType": "cq:Component",
  "componentGroup": "Teaser",
  "jcr:title": "Teaserbar Item",

  "cq:htmlTag": {
    "cq:tagName": "section",
    "class": "teaser col-1-4"
  },

  "cq:editConfig": {
    "cq:dialogMode": "floating",
    "cq:disableTargeting": true,
    "cq:listeners": {
      "afteredit": "adaptto.authoring.listener.refreshAjaxContentAfterEdit"
    }
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Teaserbar Item",
    "content": {
      "sling:resourceType": "granite/ui/components/foundation/container",
      "layout": {
        "sling:resourceType": "granite/ui/components/foundation/layouts/tabs",
        "type": "nav"
      },
      "items": {

        "teaser": {
          "sling:resourceType": "granite/ui/components/foundation/section",
          "jcr:title": "Teaser",
          "layout": {
            "sling:resourceType": "granite/ui/components/foundation/layouts/fixedcolumns"
          },
          "items": {
            "column": {
              "sling:resourceType": "granite/ui/components/foundation/container",
              "items": {
                "title": {
                  "sling:resourceType": "granite/ui/components/foundation/form/textfield",
                  "name": "./title",
                  "fieldLabel": "Title",
                  "required": true
                },
                "teaserContent": {
                  "sling:resourceType": "granite/ui/components/foundation/form/textarea",
                  "name": "./teaserContent",
                  "fieldLabel": "Text"
                }
              }

            }
          }
        },

        "media": {
          "sling:resourceType": "granite/ui/components/foundation/include",
          "jcr:title": "Image",
          "path": "/apps/wcm-io-handler-sample-app/components/global/include/mediaRefTab"
        },

        "link": {
          "sling:resourceType": "granite/ui/components/foundation/include",
          "jcr:title": "Link",
          "path": "/apps/wcm-io-handler-sample-app/components/global/include/linkRefTab"
        }

      }
    }
  }

}
