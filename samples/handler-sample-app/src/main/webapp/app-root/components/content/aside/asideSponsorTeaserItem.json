{
  "jcr:primaryType": "cq:Component",
  "componentGroup": "Aside",
  "jcr:title": "Sponsor teaser item",
  "cq:editConfig": {
    "cq:dialogMode": "floating",
    "cq:disableTargeting": true,
    "cq:listeners": {
      "afteredit": "adaptto.authoring.listener.refreshAjaxContentAfterEdit"
    }
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Sponsor teaser item",
    "content": {
      "sling:resourceType": "granite/ui/components/foundation/container",
      "layout": {
        "sling:resourceType": "granite/ui/components/foundation/layouts/tabs",
        "type": "nav"
      },
      "items": {

        "media": {
          "sling:resourceType": "granite/ui/components/foundation/include",
          "jcr:title": "Image",
          "path": "/apps/wcm-io-handler-sample-app/components/global/include/mediaRefTab"
        },

        "mediaDimensions": {
          "sling:resourceType": "granite/ui/components/foundation/section",
          "jcr:title": "Image dimensions",
          "layout": {
            "sling:resourceType": "granite/ui/components/foundation/layouts/fixedcolumns"
          },
          "items": {
            "column": {
              "sling:resourceType": "granite/ui/components/foundation/container",
              "items": {
                "imageWidth": {
                  "sling:resourceType": "granite/ui/components/foundation/form/textfield",
                  "name": "./imageWidth",
                  "fieldLabel": "Image width (px)",
                  "required": true
                },
                "imageHeight": {
                  "sling:resourceType": "granite/ui/components/foundation/form/textfield",
                  "name": "./imageHeight",
                  "fieldLabel": "Image height (px)",
                  "required": true
                }
              }

            }
          }
        },

        "link": {
          "sling:resourceType": "granite/ui/components/foundation/include",
          "jcr:title": "Link",
          "path": "/apps/wcm-io-handler-sample-app/components/global/include/linkRefNoTitleTab"
        }

      }
    }
  }

}
