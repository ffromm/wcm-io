{
  "jcr:primaryType": "cq:Component",
  "jcr:title": "Content Headline",
  "componentGroup": "Content",

  "cq:editConfig": {
    "cq:dialogMode": "floating",
    "cq:disableTargeting": true,
    "cq:listeners": {
      "afteredit": "handlerSample.authoring.listener.refreshAjaxContentAfterEdit"
    }
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Content Headline",
    "content": {
      "sling:resourceType": "granite/ui/components/foundation/section",
      "layout": {
        "sling:resourceType": "granite/ui/components/foundation/layouts/fixedcolumns"
      },
      "items": {
        "column": {
          "sling:resourceType": "granite/ui/components/foundation/container",
          "items": {
            "headline": {
              "sling:resourceType": "granite/ui/components/foundation/form/textfield",
              "name": "./headline",
              "fieldLabel": "Headline",
              "required": true
            },
            "smaller": {
              "sling:resourceType": "granite/ui/components/foundation/form/checkbox",
              "name": "./smaller",
              "text": "Smaller Headline",
              "value": "true",
              "fieldDescription": "h2 instead of h1"
            },
            "smallerDelete": {
              "sling:resourceType": "granite/ui/components/foundation/form/hidden",
              "name": "./smaller@Delete",
              "value": "true"
            },
            "smallerTypeHint": {
              "sling:resourceType": "granite/ui/components/foundation/form/hidden",
              "name": "./smaller@TypeHint",
              "value": "Boolean"
            }
          }
        }
      }
    }
  }

}
